<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Barra lateral de color -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF5252"
            android:layout_marginEnd="12dp"/>

        <!-- Foto circular -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAlertPhoto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="#E0E0E0"
            android:layout_marginEnd="12dp"/>

        <!-- Informaci贸n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- C贸digo -->
            <TextView
                android:id="@+id/tvAlertCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#A0224 089"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp"/>

            <!-- Estado y direcci贸n -->
            <TextView
                android:id="@+id/tvAlertState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perro herido - Av. Espa帽a"
                android:textSize="14sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tvAlertPetType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=" Perro"
                android:textSize="11sp"
                android:textColor="#999999"/>
            <!-- Direcci贸n completa -->
            <TextView
                android:id="@+id/tvAlertAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Av. Espa帽a 123"
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawablePadding="4dp"
                android:drawableStart="@android:drawable/ic_dialog_map"
                android:drawableTint="#999999"
                android:layout_marginBottom="8dp"/>

            <!-- Info adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Distancia -->
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3 km"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:drawablePadding="4dp"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawableTint="#999999"
                    android:layout_marginEnd="16dp"/>

                <!-- Tiempo -->
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hace 15 min"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:drawablePadding="4dp"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawableTint="#999999"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Bot贸n de estado -->
        <Button
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="URGENTE"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="#FF5252"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>