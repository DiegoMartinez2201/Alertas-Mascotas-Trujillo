<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="48dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:background="@drawable/bg_message_received"
        android:padding="10dp"
        android:elevation="1dp">

        <!-- Mensaje de texto -->
        <TextView
            android:id="@+id/tvMessageReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es mi mensaje"
            android:textSize="15sp"
            android:textColor="#333333"
            android:visibility="gone" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/ivImageReceived"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_message"
            android:visibility="gone" />

        <!-- Archivo -->
        <LinearLayout
            android:id="@+id/layoutFileReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_file_message"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_save"
                android:tint="#666666" />

            <TextView
                android:id="@+id/tvFileNameReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="documento.pdf"
                android:textSize="13sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Hora -->
        <TextView
            android:id="@+id/tvTimeReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="10:30"
            android:textSize="11sp"
            android:textColor="#999999" />
    </LinearLayout>
</LinearLayout>