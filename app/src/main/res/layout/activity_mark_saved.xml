<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ Certificado de Rescate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Felicidades por salvar una vida!"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- InformaciÃ³n del Caso -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAlertInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando informaciÃ³n del caso..."
                    android:textSize="14sp"
                    android:textColor="#1976D2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Foto del Rescate (Opcional) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Foto del Rescate (Opcional)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comparte una foto de la mascota salvada"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/layoutAddPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivSavedPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutPhotoPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="#4CAF50"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toca para agregar foto"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ La foto ayuda a la comunidad a ver el resultado positivo"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:padding="8dp"
                    android:background="#FFFDE7"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Datos del Rescatista -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Datos del Rescatista"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Completo *"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRescuerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI / CÃ©dula *"
                    app:startIconDrawable="@android:drawable/ic_menu_info_details"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRescuerDNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TelÃ©fono *"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRescuerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DirecciÃ³n *"
                    app:startIconDrawable="@android:drawable/ic_menu_compass"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRescuerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:maxLines="2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notas del Rescate (Opcional)"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSavedNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="5"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Firma Digital -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœï¸ Firma Digital *"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Por favor, firme en el espacio blanco usando su dedo"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="12dp"/>

                <!-- Canvas para firma -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="12dp">

                    <com.primero.alertamascota.SignatureCanvas
                        android:id="@+id/signatureCanvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#CCCCCC"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firme aquÃ­"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <Button
                    android:id="@+id/btnClearSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—‘ï¸ Borrar Firma"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Aviso Legal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Importante"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#E65100"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Al generar este certificado, confirmas que:\n\nâ€¢ Has rescatado al animal mencionado\nâ€¢ Los datos proporcionados son verÃ­dicos\nâ€¢ Asumes la responsabilidad del rescate\nâ€¢ El PDF se guardarÃ¡ en tu dispositivo"
                    android:textSize="12sp"
                    android:textColor="#E65100"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de AcciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/btnCancelSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                android:background="#757575"
                android:layout_marginEnd="8dp"
                android:padding="14dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <Button
                android:id="@+id/btnConfirmSaved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“„ Generar Certificado"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginStart="8dp"
                android:padding="14dp"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>