<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardChat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChatAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="#3498DB" />

        <!-- Información del chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Email del usuario y hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChatUserEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="usuario@ejemplo.com"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvChatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textSize="12sp"
                    android:textColor="#95A5A6" />
            </LinearLayout>

            <!-- Código de alerta -->
            <TextView
                android:id="@+id/tvChatAlertCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caso #ABC1234"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="2dp" />

            <!-- Último mensaje -->
            <TextView
                android:id="@+id/tvChatLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es el último mensaje..."
                android:textSize="13sp"
                android:textColor="#7F8C8D"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Badge de mensajes no leídos -->
        <TextView
            android:id="@+id/tvUnreadBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/badge_unread"
            android:text="5"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>