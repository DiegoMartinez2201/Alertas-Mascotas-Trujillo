                        android:backgroundTint="#3498DB"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFilterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostrando 0 alertas"
                    android:textSize="12sp"
