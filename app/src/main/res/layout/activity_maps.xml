<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Contenido principal (el mapa) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="MenÃº"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Usuario"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"/>

            <!-- BotÃ³n de Filtros -->
            <ImageButton
                android:id="@+id/btnFilters"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#3498DB"
                android:contentDescription="Filtros"/>

        </LinearLayout>

        <!-- âœ¨ NUEVO: Panel de Filtros -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white">

                <!-- Filtro por Tipo de Mascota -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¾ Tipo de Mascota"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupPetType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:selectionRequired="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAllPets"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¾ Todos"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDog"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ• Perro"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCat"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ± Gato"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBird"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¦ Ave"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOther"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â“ Otro"/>
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <!-- Filtro por Estado -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Estado"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:selectionRequired="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAllStates"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‹ Todos"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipInjured"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ©¹ Herido"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLost"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ” Perdido"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAbandoned"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜¢ Abandonado"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDanger"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš ï¸ En Peligro"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAdoption"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ  AdopciÃ³n"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSick"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤’ Enfermo"/>
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <!-- Botones de AcciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnClearFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limpiar"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnApplyFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplicar"
                        android:textSize="12sp"
                        android:backgroundTint="#3498DB"/>
                </LinearLayout>

                <!-- Contador de resultados -->
                <TextView
                    android:id="@+id/tvFilterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostrando 0 alertas"
                    android:textSize="12sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mapa -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_below="@id/topBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Mensaje de instrucciÃ³n -->
        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:text="ðŸ“ Toca el mapa para colocar tu marcador"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="#CC4CAF50"
            android:gravity="center"
            android:elevation="4dp"
            android:visibility="gone" />

        <!-- FAB para crear marcador -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="24dp"
            android:contentDescription="Crear marcador"
            android:src="@android:drawable/ic_input_add"
            app:tint="@android:color/white"
            app:backgroundTint="#2196F3" />

        <!-- FAB para cancelar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="24dp"
            android:contentDescription="Cancelar"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white"
            app:backgroundTint="#F44336"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/menu_text_color"
        app:itemIconTint="@color/menu_icon_tint"
        app:headerLayout="@layout/nav_header"
        android:background="?android:attr/colorBackground"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>