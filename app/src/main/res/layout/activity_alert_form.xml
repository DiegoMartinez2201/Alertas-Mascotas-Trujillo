<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_form_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <!-- Card para el formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- BotÃ³n Agregar Foto -->
                <LinearLayout
                    android:id="@+id/layoutAddPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivPhotoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutPhotoPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="#9E9E9E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/alert_photo_hint"
                            android:textSize="16sp"
                            android:textColor="#757575"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- UbicaciÃ³n en el mapa (solo visualizaciÃ³n) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ UbicaciÃ³n"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvLocationCoords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lat: 0.0, Lng: 0.0"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:padding="12dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="16dp"/>

                <!-- DirecciÃ³n -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alert_address_hint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:maxLines="2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- âœ¨ NUEVO: Tipo de Mascota -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¾ Tipo de Mascota *"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerPetType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Estado (Spinner) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Estado de la mascota *"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- DescripciÃ³n -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alert_description_hint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="5"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alert_cancel_button"
                android:textColor="@android:color/white"
                android:background="#757575"
                android:layout_marginEnd="8dp"
                android:padding="14dp"
                style="@style/Widget.MaterialComponents.Button"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alert_register_button"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginStart="8dp"
                android:padding="14dp"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>

        <!-- Progreso -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>