<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/gradient_header"
            android:paddingBottom="24dp">

            <!-- BotÃ³n volver -->
            <ImageButton
                android:id="@+id/btnBackPublicProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"
                android:contentDescription="Volver"/>

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="Perfil de Usuario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <!-- Foto de perfil -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivPublicProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvProfileTitle"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_person_placeholder"
                app:civ_border_width="4dp"
                app:civ_border_color="@android:color/white"/>

        </RelativeLayout>

        <!-- Contenido del perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="-20dp">

            <!-- Nombre y email -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvPublicFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Usuario"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_adaptive"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvPublicEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario@email.com"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_adaptive"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@android:drawable/sym_action_email"
                        android:drawablePadding="8dp"
                        android:drawableTint="#2196F3"/>

                    <TextView
                        android:id="@+id/tvPublicMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miembro desde enero 2024"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary_adaptive"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawablePadding="6dp"
                        android:drawableTint="@color/text_tertiary_adaptive"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- EstadÃ­sticas CLICKEABLES como TABS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="2">

                    <!-- TAB Casos Resueltos -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardResolvedTab"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvResolvedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_green"/>

                            <TextView
                                android:id="@+id/tvResolvedLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Casos\nResueltos"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary_adaptive"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘† Toca para ver"
                                android:textSize="9sp"
                                android:textColor="@color/text_tertiary_adaptive"
                                android:textStyle="italic"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- TAB Casos Reportados -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardReportedTab"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvReportedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/info_blue"/>

                            <TextView
                                android:id="@+id/tvReportedLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Casos\nReportados"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary_adaptive"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘† Toca para ver"
                                android:textSize="9sp"
                                android:textColor="@color/text_tertiary_adaptive"
                                android:textStyle="italic"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TelÃ©fono -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPhonePublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“±"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="#E8F5E9"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TelÃ©fono"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary_adaptive"/>

                        <TextView
                            android:id="@+id/tvPublicPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+51 999 999 999"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_adaptive"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- UbicaciÃ³n -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLocationPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="#FFF3E0"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UbicaciÃ³n"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary_adaptive"/>

                        <TextView
                            android:id="@+id/tvPublicLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lima, PerÃº"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_adaptive"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bio -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBioPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobre mÃ­"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_adaptive"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:drawablePadding="8dp"
                        android:drawableTint="#9C27B0"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvPublicBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bio del usuario"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_adaptive"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TÃ­tulo de secciÃ³n (cambia segÃºn tab seleccionado) -->
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casos Resueltos Recientes ðŸŽ‰"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_adaptive"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Lista de casos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUserCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tvNoCasesPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay casos para mostrar"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary_adaptive"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            android:indeterminateTint="@color/info_blue"/>

    </LinearLayout>
</ScrollView>