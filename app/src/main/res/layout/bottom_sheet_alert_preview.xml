<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <!-- Handle de arrastre -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.5"
                    android:background="#BDBDBD" />

                <!-- Imagen de la mascota -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivAlertPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery"/>

                        <TextView
                            android:id="@+id/tvNoPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="\nSin foto"
                            android:textSize="18sp"
                            android:textColor="#90A4AE"
                            android:gravity="center"
                            android:visibility="gone"/>

                        <!-- Badge de estado -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/tvAlertStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Activa"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="#4CAF50"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Bot贸n cerrar -->
                        <ImageButton
                            android:id="@+id/btnClosePreview"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_circle_white"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:tint="#424242"
                            android:contentDescription="Cerrar"
                            android:elevation="4dp"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Contenido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <!-- Header con estado y tipo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvAlertState"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Herido"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"/>

                        <TextView
                            android:id="@+id/tvAlertPetType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Perro"
                            android:textColor="#FF6F00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="#FFF3E0"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>

                    </LinearLayout>

                    <!-- Descripci贸n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text=""
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="#E3F2FD"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripci贸n"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvAlertDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sin descripci贸n"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:maxLines="2"
                                android:ellipsize="end"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Ubicaci贸n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text=""
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="#FFEBEE"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubicaci贸n"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvAlertAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Direcci贸n no disponible"
                                android:textSize="13sp"
                                android:textColor="#424242"
                                android:maxLines="2"
                                android:ellipsize="end"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Reportero -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text=""
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="#F3E5F5"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reportado por"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvReporterEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="usuario@email.com"
                                android:textSize="13sp"
                                android:textColor="#424242"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <TextView
                                android:id="@+id/tvReportDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hace 2 horas"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bot贸n Ver Detalles Completos -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewFullDetails"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ver Detalles Completos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_info_details"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        android:backgroundTint="#1976D2"
                        android:elevation="2dp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>