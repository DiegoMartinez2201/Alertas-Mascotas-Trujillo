<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- T铆tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" C贸digo QR de la Alerta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Card con el QR -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- C贸digo QR -->
            <ImageView
                android:id="@+id/ivQRCode"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:scaleType="fitCenter"
                android:background="@android:color/white"
                android:padding="8dp"
                android:contentDescription="C贸digo QR"/>

            <!-- Info -->
            <TextView
                android:id="@+id/tvQRInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escanea este c贸digo para ver la alerta"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bot贸n compartir QR -->
    <Button
        android:id="@+id/btnShareQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Compartir c贸digo QR"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="#2196F3"
        android:padding="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Instrucciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Comparte este QR para que otros puedan ver los detalles de la alerta r谩pidamente"
        android:textSize="11sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#F5F5F5"/>

</LinearLayout>