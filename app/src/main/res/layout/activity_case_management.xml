                            android:textSize="14sp"
                            android:textColor="#2C3E50" />
                    </LinearLayout>

                    <!-- Fecha CreaciÃ³n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“… Creado:"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManagementCreatedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01/01/2024 10:00"
                            android:textSize="14sp"
                            android:textColor="#2C3E50" />
                    </LinearLayout>

                    <!-- Fecha ResoluciÃ³n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="âœ… Resuelto:"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManagementResolvedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="02/01/2024 15:30"
                            android:textSize="14sp"
                            android:textColor="#27AE60"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- Reportado por -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤ Reportado por:"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManagementReportedBy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="user@example.com"
                            android:textSize="14sp"
                            android:textColor="#2C3E50" />
                    </LinearLayout>

                    <!-- Resuelto por -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¦¸ Resuelto por:"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManagementResolvedBy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="resolver@example.com"
                            android:textSize="14sp"
                            android:textColor="#27AE60"
