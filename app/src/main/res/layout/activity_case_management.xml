                    android:backgroundTint="#9B59B6"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnMarkAsReviewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
