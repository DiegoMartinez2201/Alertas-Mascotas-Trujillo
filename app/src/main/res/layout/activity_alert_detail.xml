<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- AppBar con imagen de fondo -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="56dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Display1">

            <!-- Imagen de la mascota -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/ivAlertPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"/>

                <!-- Overlay gradient -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gradient_overlay"/>

                <TextView
                    android:id="@+id/tvNoPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ðŸ“·\nSin foto disponible"
                    android:textSize="20sp"
                    android:textColor="#90A4AE"
                    android:gravity="center"
                    android:visibility="gone"/>

                <!-- Badge de estado -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvAlertStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¾ Activa"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="#4CAF50"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_revert"
                        android:tint="@android:color/white"
                        android:contentDescription="Volver"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btnShare"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_share"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Compartir"/>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header con estado y tipo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAlertState"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Herido"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"/>

                        <TextView
                            android:id="@+id/tvAlertPetType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ• Perro"
                            android:textColor="#FF6F00"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:background="#FFF3E0"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:background="#1976D2"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Esta mascota necesita tu ayuda"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- DescripciÃ³n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="#E3F2FD"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DescripciÃ³n"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAlertDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sin descripciÃ³n"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- UbicaciÃ³n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="#FFEBEE"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UbicaciÃ³n"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAlertAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DirecciÃ³n no disponible"
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp"
                        android:lineSpacingExtra="2dp"/>

                    <TextView
                        android:id="@+id/tvAlertCoords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lat: 0.0, Lng: 0.0"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="monospace"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- InformaciÃ³n del reportero -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ‘¤"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:background="#F3E5F5"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reportado por"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                    </LinearLayout>

                    <!-- Email clickeable con diseÃ±o de botÃ³n -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:layout_marginBottom="12dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/sym_action_email"
                                android:tint="#2196F3"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:id="@+id/tvReporterEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="usuario@email.com"
                                android:textSize="15sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_view"
                                android:tint="#2196F3"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘† Toca el email para ver el perfil"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:textStyle="italic"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•"
                            android:textSize="14sp"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/tvReportDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hace 2 horas"
                            android:textSize="13sp"
                            android:textColor="#9E9E9E"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <!-- BotÃ³n contactar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactReporter"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ’¬ Contactar Reportante"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    android:backgroundTint="#2196F3"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"/>

                <!-- BotÃ³n marcar como salvado -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMarkAsSaved"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ… Marcar como Salvado"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/checkbox_on_background"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp"/>

                <!-- BotÃ³n cerrar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cerrar"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#BDBDBD"
                    app:strokeWidth="2dp"
                    android:textColor="#757575"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#1976D2"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>