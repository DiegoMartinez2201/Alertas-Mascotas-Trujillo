<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:background="@drawable/bg_message_sent"
        android:padding="10dp"
        android:elevation="1dp">

        <!-- Mensaje de texto -->
        <TextView
            android:id="@+id/tvMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es mi mensaje"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/ivImageSent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_message"
            android:visibility="gone" />

        <!-- Archivo -->
        <LinearLayout
            android:id="@+id/layoutFileSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_file_message"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_save"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvFileNameSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="documento.pdf"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Hora -->
        <TextView
            android:id="@+id/tvTimeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="10:30"
            android:textSize="11sp"
            android:textColor="#E8E8E8" />
    </LinearLayout>
</LinearLayout>